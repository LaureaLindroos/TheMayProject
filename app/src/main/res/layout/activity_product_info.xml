<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bimobject.themayproject.ui.productinfoactivity.ProductInfoActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_product_info_view_pager"
        android:layout_width="match_parent"
        android:layout_height="395dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/activity_product_info_ll_slider_dots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/activity_product_info_tv_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>